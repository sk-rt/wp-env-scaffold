{
  "name": "wp-env-scaffold",
  "description": "WordPress Theme Dev scaffold",
  "version": "1.0.0",
  "main": "index.js",
  "author": "sk_rt",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p watch:*",
    "build": "npm-run-all clean-dist dist:wp-theme build:webpack",
    "watch:webpack": "webpack --watch",
    "build:webpack": "NODE_ENV=production webpack --mode production",
    "dist:wp-theme": "cpx \"app/themes/!(twenty*)/**/*.!(log)\" dist/",
    "wp": "COMPOSE_PROJECT_NAME=my-project wp-env",
    "wp:start": "npm-run-all \"wp start\"",
    "wp:stop": "npm-run-all \"wp stop\"",
    "wp:update": "npm-run-all \"wp start --update\"",
    "wp:cli": "yarn wp run cli wp",
    "wp:setup": "node scripts/wp-setup.js",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean-dist": "rimraf dist",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@wordpress/env": "^4.1.2",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.27.5",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cpx": "^1.5.0",
    "css-loader": "^6.4.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.3",
    "mini-css-extract-plugin": "^2.4.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.10",
    "postcss-loader": "^6.2.0",
    "prettier": "^2.4.1",
    "readline-sync": "^1.4.10",
    "rimraf": "^3.0.2",
    "sass": "^1.43.2",
    "sass-loader": "^12.2.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1"
  }
}
